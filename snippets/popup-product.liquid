{% comment %}
  Modern Popup Product Modal Snippet
  Features:
  - Product details display
  - Dynamic variant selection
  - Add to cart functionality
  - Mobile responsive
  - Close on outside click or X button
  - Enhanced variant handling
  - Modern design with glassmorphism effects
{% endcomment %}

<div id="product-popup" class="modern-popup" style="display: none;">
  <div class="modern-popup__overlay"></div>
  <div class="modern-popup__content">
    <button class="modern-popup__close" onclick="closeProductPopup()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6 6 18"></path>
        <path d="m6 6 12 12"></path>
      </svg>
    </button>
    
    <div class="modern-popup__body">
      <div class="modern-popup__image-section">
        <div class="modern-popup__image-container">
          <img id="popup-product-image" src="" alt="" class="modern-popup__image">
        </div>
      </div>
      
      <div class="modern-popup__details">
        <div class="modern-popup__header">
          <h2 id="popup-product-title" class="modern-popup__title"></h2>
          <div id="popup-product-price" class="modern-popup__price"></div>
        </div>
        
        <div id="popup-product-description" class="modern-popup__description"></div>
        
        <form id="popup-product-form" class="modern-popup__form">
          <input type="hidden" id="popup-product-id" name="id" value="">
          
          <div id="popup-variant-selectors" class="modern-popup__variants">
            <!-- Variant selectors will be dynamically populated -->
          </div>
          
          <div class="modern-popup__quantity">
            <label for="popup-quantity" class="modern-popup__quantity-label">Quantity</label>
            <div class="modern-popup__quantity-controls">
              <button type="button" class="modern-popup__quantity-btn" onclick="changeQuantity(-1)">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                </svg>
              </button>
              <input type="number" id="popup-quantity" name="quantity" value="1" min="1" max="99" class="modern-popup__quantity-input">
              <button type="button" class="modern-popup__quantity-btn" onclick="changeQuantity(1)">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 5v14"></path>
                  <path d="M5 12h14"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <button type="submit" class="modern-popup__add-to-cart">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"></path>
              <path d="M21 12c-1 0-4-1-4-4V4H7v4c0 3-3 4-4 4"></path>
              <path d="M3 5h18l-2 14H5L3 5z"></path>
            </svg>
            Add to Cart
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .modern-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: fadeIn 0.4s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .modern-popup__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    cursor: pointer;
    backdrop-filter: blur(8px);
  }
  
  .modern-popup__content {
    position: relative;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24px;
    max-width: 1000px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.4);
    animation: slideIn 0.4s ease-out;
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px);
  }
  
  @keyframes slideIn {
    from {
      transform: translateY(-30px) scale(0.95);
      opacity: 0;
    }
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }
  
  .modern-popup__close {
    position: absolute;
    top: 20px;
    right: 25px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    color: #4a5568;
    z-index: 10;
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .modern-popup__close:hover {
    background: rgba(255, 255, 255, 1);
    transform: scale(1.1) rotate(90deg);
    color: #2d3748;
  }
  
  .modern-popup__body {
    display: flex;
    padding: 40px;
    gap: 40px;
  }
  
  .modern-popup__image-section {
    flex: 0 0 400px;
  }
  
  .modern-popup__image-container {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    background: #f7fafc;
  }
  
  .modern-popup__image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }
  
  .modern-popup__image:hover {
    transform: scale(1.05);
  }
  
  .modern-popup__details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 25px;
  }
  
  .modern-popup__header {
    border-bottom: 2px solid #e2e8f0;
    padding-bottom: 20px;
  }
  
  .modern-popup__title {
    font-size: 2rem;
    font-weight: 800;
    margin: 0 0 15px 0;
    color: #1a202c;
    line-height: 1.2;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .modern-popup__price {
    font-size: 1.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .price-sale {
    color: #e53e3e;
  }
  
  .price-compare {
    color: #a0aec0;
    text-decoration: line-through;
    font-size: 1.2rem;
  }
  
  .modern-popup__description {
    line-height: 1.7;
    color: #4a5568;
    font-size: 1rem;
    background: #f7fafc;
    padding: 20px;
    border-radius: 12px;
    border-left: 4px solid #667eea;
  }
  
  .modern-popup__variants {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  
  .modern-popup__variant-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .modern-popup__variant-label {
    font-weight: 700;
    color: #2d3748;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .modern-popup__variant-select {
    width: 100%;
    padding: 15px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: white;
    color: #2d3748;
  }
  
  .modern-popup__variant-select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }
  
  .modern-popup__quantity {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .modern-popup__quantity-label {
    font-weight: 700;
    color: #2d3748;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .modern-popup__quantity-controls {
    display: flex;
    align-items: center;
    gap: 15px;
    background: #f7fafc;
    padding: 8px;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
  }
  
  .modern-popup__quantity-btn {
    width: 45px;
    height: 45px;
    border: none;
    background: white;
    border-radius: 10px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #667eea;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .modern-popup__quantity-btn:hover {
    background: #667eea;
    color: white;
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }
  
  .modern-popup__quantity-btn:active {
    transform: scale(0.95);
  }
  
  .modern-popup__quantity-input {
    width: 80px;
    padding: 12px;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 16px;
    text-align: center;
    font-weight: 600;
    background: white;
    color: #2d3748;
  }
  
  .modern-popup__quantity-input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }
  
  .modern-popup__add-to-cart {
    width: 100%;
    padding: 18px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
  }
  
  .modern-popup__add-to-cart:hover {
    background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
  }
  
  .modern-popup__add-to-cart:disabled {
    background: #a0aec0;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .modern-popup__content {
      width: 95%;
      max-height: 95vh;
    }
    
    .modern-popup__body {
      flex-direction: column;
      padding: 25px;
      gap: 25px;
    }
    
    .modern-popup__image-section {
      flex: none;
    }
    
    .modern-popup__title {
      font-size: 1.6rem;
    }
    
    .modern-popup__price {
      font-size: 1.3rem;
    }
    
    .modern-popup__close {
      top: 15px;
      right: 20px;
      width: 40px;
      height: 40px;
    }
    
    .modern-popup__quantity-controls {
      gap: 10px;
    }
    
    .modern-popup__quantity-btn {
      width: 40px;
      height: 40px;
    }
  }
  
  @media (max-width: 480px) {
    .modern-popup__body {
      padding: 20px;
    }
    
    .modern-popup__title {
      font-size: 1.4rem;
    }
    
    .modern-popup__add-to-cart {
      padding: 15px;
      font-size: 16px;
    }
  }
</style>

<script>
  // Global variables for popup functionality
  let currentProduct = null;
  let currentVariant = null;
  
  // Open product popup
  function openProductPopup(product) {
    currentProduct = product;
    currentVariant = product.variants[0]; // Default to first variant
    
    // Populate popup content
    document.getElementById('popup-product-image').src = product.featured_image;
    document.getElementById('popup-product-image').alt = product.title;
    document.getElementById('popup-product-title').textContent = product.title;
    document.getElementById('popup-product-id').value = currentVariant.id;
    document.getElementById('popup-quantity').value = 1;
    
    // Set price
    updatePopupPrice();
    
    // Set description
    document.getElementById('popup-product-description').innerHTML = product.description;
    
    // Build variant selectors
    buildVariantSelectors(product);
    
    // Show popup
    document.getElementById('product-popup').style.display = 'flex';
    document.body.style.overflow = 'hidden';
    
    // Focus on first input for accessibility
    setTimeout(() => {
      const firstInput = document.querySelector('.modern-popup__variant-select, #popup-quantity');
      if (firstInput) {
        firstInput.focus();
      }
    }, 100);
  }
  
  // Close product popup
  function closeProductPopup() {
    document.getElementById('product-popup').style.display = 'none';
    document.body.style.overflow = '';
    currentProduct = null;
    currentVariant = null;
  }
  
  // Update popup price display
  function updatePopupPrice() {
    const priceElement = document.getElementById('popup-product-price');
    if (currentVariant.compare_at_price && currentVariant.compare_at_price > currentVariant.price) {
      priceElement.innerHTML = `
        <span class="price-sale">${formatMoney(currentVariant.price)}</span>
        <span class="price-compare">${formatMoney(currentVariant.compare_at_price)}</span>
      `;
    } else {
      priceElement.textContent = formatMoney(currentVariant.price);
    }
  }
  
  // Build variant selectors
  function buildVariantSelectors(product) {
    const container = document.getElementById('popup-variant-selectors');
    container.innerHTML = '';
    
    if (product.variants.length <= 1) {
      return;
    }
    
    // Group variants by option
    const options = product.options;
    options.forEach((option, index) => {
      const optionName = option.name;
      const optionValues = [...new Set(product.variants.map(v => v.options[index]))];
      
      if (optionValues.length > 1) {
        const group = document.createElement('div');
        group.className = 'modern-popup__variant-group';
        
        const label = document.createElement('label');
        label.className = 'modern-popup__variant-label';
        label.textContent = optionName;
        
        const select = document.createElement('select');
        select.className = 'modern-popup__variant-select';
        select.dataset.optionIndex = index;
        
        // Add default option
        const defaultOption = document.createElement('option');
        defaultOption.value = '';
        defaultOption.textContent = `Select ${optionName}`;
        defaultOption.disabled = true;
        select.appendChild(defaultOption);
        
        optionValues.forEach(value => {
          const option = document.createElement('option');
          option.value = value;
          option.textContent = value;
          select.appendChild(option);
        });
        
        // Set current value
        if (currentVariant && currentVariant.options[index]) {
          select.value = currentVariant.options[index];
        }
        
        select.addEventListener('change', handleVariantChange);
        
        group.appendChild(label);
        group.appendChild(select);
        container.appendChild(group);
      }
    });
  }
  
  // Handle variant selection change
  function handleVariantChange(event) {
    const optionIndex = parseInt(event.target.dataset.optionIndex);
    const selectedValue = event.target.value;
    
    // Find matching variant
    const matchingVariant = currentProduct.variants.find(variant => {
      return variant.options[optionIndex] === selectedValue;
    });
    
    if (matchingVariant) {
      currentVariant = matchingVariant;
      document.getElementById('popup-product-id').value = currentVariant.id;
      
      // Update price
      updatePopupPrice();
      
      // Update image if variant has different image
      if (currentVariant.featured_image) {
        document.getElementById('popup-product-image').src = currentVariant.featured_image;
      }
    }
  }
  
  // Change quantity
  function changeQuantity(delta) {
    const quantityInput = document.getElementById('popup-quantity');
    let currentQuantity = parseInt(quantityInput.value) || 1;
    let newQuantity = currentQuantity + delta;
    
    // Ensure quantity is within bounds
    newQuantity = Math.max(1, Math.min(99, newQuantity));
    
    quantityInput.value = newQuantity;
  }
  
  // Format money (basic implementation)
  function formatMoney(cents) {
    return '$' + (cents / 100).toFixed(2);
  }
  
  // Handle form submission
  document.getElementById('popup-product-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const quantity = parseInt(formData.get('quantity'));
    const variantId = formData.get('id');
    
    if (!variantId) {
      showNotification('Please select a variant', 'error');
      return;
    }
    
    addToCart(variantId, quantity);
  });
  
  // Close popup when clicking overlay
  document.querySelector('.modern-popup__overlay').addEventListener('click', closeProductPopup);
  
  // Close popup with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('product-popup').style.display === 'flex') {
      closeProductPopup();
    }
  });
  
  // Prevent popup from closing when clicking inside content
  document.querySelector('.modern-popup__content').addEventListener('click', function(e) {
    e.stopPropagation();
  });
</script>
